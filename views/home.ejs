<%-include('header');-%>

<body>

   <h1><%=listName%></h1>
   <form action="/delete" method="POST" >
    <li><input type="hidden" name="delItem[]" value="<%=listName%>"></li>
      <!-- <li><%=newItems%></li> -->
    <%  for(let i = 0; i<newItems.length; i++){ %>
      <ul>
        <li><input type="checkbox" value="<%=newItems[i].name%>" name="delItem[]" onChange="this.form.submit()"></li>
        <li><p><%=newItems[i].name%></p></li>
      </ul>
    <% } %>
    %>
  </form>

   <form action="/" method="POST">
   <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
   <button name="listName" value=<%=listName%> >+</button>
   </form>

   <%-include('footer');-%>